<!-----------------------------
	REVIEWS SECTION
------------------------------>
<div class="reviews">
    <div class="container d-flex">
      <% Shop.first.reviews.each do |review| %>
        <div class="notification">
          <img src='https://kitt.lewagon.com/placeholder/users/arthur-littm' class="avatar-large" />
          <div class="notification-content">
            <p><small><%= review.created_at.strftime("%m/%d/%Y") %></small></p>
            <div class="review-content"><%= review.content %></div>
            <p><small><%= review.user.given_name %> <%= review.user.family_name %></small></p>
          </div>
        </div>
        <% end %>
    </div>
</div>
