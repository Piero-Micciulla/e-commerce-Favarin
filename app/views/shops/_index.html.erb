<div class="shops">
    <div class="shops-details d-flex">
        <% Shop.all.each do |shop| %>
        <%= link_to shop_path(shop) do %>
        <div class="card shop">
            <h4>
                <%= shop.name %>
            </h4>
            <p>
                <%= shop.phone_number %>
            </p>
            <p>
                <%= shop.address %>
            </p>
        </div>
        <% end %>
        <% end %>
    </div>
<div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
     </div>
