
<h3 class="m-3">Welcome User-name</h3>
<div class="row dashbord-back">
  <div class="col-3">
    <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
      <a class="nav-link active" id="v-pills-home-tab" data-toggle="pill" href="#v-pills-home" role="tab" aria-controls="v-pills-home" aria-selected="true">Home</a>
      <a class="nav-link" id="v-pills-negozi-tab" data-toggle="pill" href="#v-pills-negozi" role="tab" aria-controls="v-pills-negozi" aria-selected="false">Negozi</a>
      <a class="nav-link" id="v-pills-reviews-tab" data-toggle="pill" href="#v-pills-reviews" role="tab" aria-controls="v-pills-reviews" aria-selected="false">Reviews</a>
      <a class="nav-link" id="v-pills-prodotti-tab" data-toggle="pill" href="#v-pills-prodotti" role="tab" aria-controls="v-pills-prodotti" aria-selected="false">Lista Prodotti</a>
      <a class="nav-link" id="v-pills-createProduct-tab" data-toggle="pill" href="#v-pills-createProduct" role="tab" aria-controls="v-pills-createProduct" aria-selected="false">Aggiungi Prodotto</a>
    </div>
  </div>
  <div class="col-9">
    <!-- home-->
    <div class="tab-content" id="v-pills-tabContent">
      <div class="tab-pane fade show active" id="v-pills-home" role="tabpanel" aria-labelledby="v-pills-home-tab">
      empty

      </div>
      <!-- negozi-->
      <div class="tab-pane fade" id="v-pills-negozi" role="tabpanel" aria-labelledby="v-pills-negozi-tab">
       <%= link_to "I tuoi Negozi", shops_path %>
      </div>
      <!-- reviews-->
      <div class="tab-pane fade" id="v-pills-reviews" role="tabpanel" aria-labelledby="v-pills-reviews-tab">

            <h3>Leggi recenti reviews</h3>
            <% current_user.shops.each do |shop| %>
            <% shop.reviews.each do |review| %>
            <li class="list-group-item">
            <%= review.content %>
            <%= review.created_at.strftime("%m/%d/%Y") %>
            <p> Written by </p> &nbsp
            <p style="margin: 5px;">
            <%= review.user.given_name %>
            <%= review.user.family_name %>
            </p>

            </li>
            <% end %>
            <% end %>
      </div>
      <!--prodotti -->
       <div class="tab-pane fade" id="v-pills-prodotti" role="tabpanel" aria-labelledby="v-pills-prodotti-tab">
           <!-- check products  -->
                <h3>Prodotti in vetrina</h3>
                <%= render "index" %>
      </div>
      <div class="tab-pane fade" id="v-pills-createProduct" role="tabpanel" aria-labelledby="v-pills-createProduct-tab">
                <!-- add a product -->
                <h3>Aggiungi un nuovo prodotto</h3>
                <%= render "new" %>
      </div>
    </div>
  </div>
</div>


